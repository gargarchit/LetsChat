<% include partials/header.ejs %>

<div class="container">
    <div class="col-md-9">
        <h2 align="center"><i class="heart icon"></i> Likes on <%=post.caption%></h2>
        <a href = "/post"><i class="backward icon"></i> Go back</a>
    </div>
  <div class="col-md-9">
    <div class="well">
      <hr>
      <% if (post.like.length === 0) { %>
        <em style="color: grey;">No Likes yet, you can be the first to like it</em>
      <% } %>
      <% post.like.forEach((like) => { %>
        <div class="row">
          <div class="col-md-12">
            <strong> <a href = "../../user/<%= like.profile.id%>"><%= like.profile.name %><em> @ <%= like.profile.username %> </em></a> </strong>
            <span class="pull-right"><%= moment(like.created).fromNow() %></span>
              <div>
              </div>
            </div>
          </div>
          <hr>
      <% }); %>
    </div>
  </div>
</div>

<% include partials/footer.ejs %>